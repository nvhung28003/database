<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lb_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mã Sinh viên: "
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="102: "
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/lb_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lb_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên sinh viên: "
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_id" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="102: "
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/lb_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_id" />

    <TextView
        android:id="@+id/lb_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giới tính "
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_sex"
        app:layout_constraintTop_toBottomOf="@id/lb_name" />

    <TextView
        android:id="@+id/txt_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="102: "
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintLeft_toRightOf="@id/lb_sex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_name" />
    <LinearLayout
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/lb_sex"
        android:layout_width="match_parent"
        android:background="#999999"
        android:layout_height="1dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>